@page "/traits"
<DatabaseLayout>
    @*중앙: 항목 리스트 *@
    <ListContent>
        <DataListLayout Items="ActorData" TItem="(int, string)">
            <ListItemTemplate>
                <MudListItem Value = "context">
                    @($"{context.Item1.ToString("D4")} {context.Item2}")
                </MudListItem>
            </ListItemTemplate>
        </DataListLayout>
    </ListContent>
    @code {
    private List<(int,string)> ActorData = new List<(int,string)>{
        (0, "Hagen"), (1, "valery")
    };
    }
    <EditorContent>
        @* TraitEditor 컴포넌트의 UI 뼈대입니다. *@

<MudPaper Class="pa-4" Style="height: 100%; overflow-y: auto;">
    <MudStack Spacing="4">

        @* --- 기본 정보 --- *@
        <MudText Typo="Typo.h5">Trait Settings</MudText>
        <MudTextField T="string" Label="Name" Variant="Variant.Outlined" Margin="Margin.Dense" />
        <MudTextField T="string" Label="Description" Variant="Variant.Outlined" Margin="Margin.Dense" Lines="4" />

        @* --- 희귀도 선택 (Rarity) --- *@
        <MudPaper Outlined="true" Class="pa-3">
            <MudText Typo="Typo.subtitle1" GutterBottom="true">Rarity</MudText>
            <MudRadioGroup T="string">
                <MudRadio T="string" Option="@("Common")" Color="Color.Default">Common</MudRadio>
                <MudRadio T="string" Option="@("Rare")" Color="Color.Info">Rare</MudRadio>
                <MudRadio T="string" Option="@("Heroic")" Color="Color.Primary">Heroic</MudRadio>
                <MudRadio T="string" Option="@("Mythic")" Color="Color.Secondary">Mythic</MudRadio>
            </MudRadioGroup>
        </MudPaper>

        @* --- 팝업 선택 항목들 --- *@
        <MudPaper Outlined="true" Class="pa-3">
            <MudStack Spacing="2">
                <div>
                    <MudText Inline="true">Type: </MudText>
                    @* 여기에 선택된 타입 칩이 표시됩니다 *@
                    <MudChip T="string" Color="Color.Warning">Combat</MudChip>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                </div>
                <div>
                    <MudText Inline="true">Trait Buff: </MudText>
                    @* 여기에 선택된 버프셋 칩이 표시됩니다 *@
                    <MudChip T="string" Color="Color.Success">Berserker's Rage</MudChip>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" />
                </div>
            </MudStack>
        </MudPaper>

    </MudStack>
</MudPaper>

@code {
    // 여기에 TraitViewModel 클래스와 로직을 구현합니다.
}
    </EditorContent>
</DatabaseLayout>